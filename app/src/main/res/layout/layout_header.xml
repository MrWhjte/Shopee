<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/d_20dp"
    android:gravity="bottom"
    android:layout_height="@dimen/d_180dp"
    android:background="@color/DodgerBlue">


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/img_avt1"
        android:layout_width="@dimen/d_80dp"
        android:layout_height="@dimen/d_80dp"
        android:src="@drawable/avt_default"
        />
    <TextView
        android:id="@+id/textview_name1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lạc Hải Sơn"
        android:textSize="@dimen/d_20sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_marginTop="@dimen/d_8dp"
        />
    <TextView
        android:id="@+id/textview_email1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="lachaixon@gmail.com"
        android:textSize="@dimen/d_15sp"
        android:textColor="@color/white"
        />

</LinearLayout>